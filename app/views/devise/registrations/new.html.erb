<div class="flex flex-col gap-3 w-[clamp(300px,_80vw,_800px)] justify-self-center"> 
  <h2 class="text-2xl uppercase">Sign up</h2>

  <%= form_for(resource, 
    as: resource_name, 
    url: registration_path(resource_name), 
    html: { class: "flex flex-col gap-3 p-5 bg-white rounded-xl shadow py-16" }) do |f| %>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
        <%= f.label :email, class: "uppercase text-sm" %>
        <% f.object.errors.full_messages_for(:email).each do |msg| %>
          <span class="text-poppy-500 text-sm"><%= msg %></span>
        <% end %>
      </div>
      <%= f.email_field :email, 
        autofocus: true, 
        autocomplete: "email", 
        class: "border py-1 px-5 rounded-full text-sm w-full" %>
    </div>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
        <%= f.label :username, class: "uppercase text-sm" %>
        <div class="flex flex-col items-end text-right">
          <% f.object.errors.full_messages_for(:username).each do |msg| %>
            <span class="text-poppy-500 text-sm"><%= msg %></span>
          <% end %>
        </div>
      </div>
      <%= f.text_field :username, 
        autofocus: true, 
        class: "border py-1 px-5 rounded-full text-sm w-full" %>
    </div>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
        <div>
          <%= f.label :password, class: "uppercase text-sm" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <% f.object.errors.full_messages_for(:password).each do |msg| %>
          <span class="text-poppy-500 text-sm text-right"><%= msg %></span>
        <% end %>
      </div>
      <%= f.password_field :password, 
        autocomplete: "new-password", 
        class: "border py-1 px-5 rounded-full text-sm w-full" %>
    </div>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
        <%= f.label :password_confirmation, class: "uppercase text-sm" %>
        <% f.object.errors.full_messages_for(:password_confirmation).each do |msg| %>
          <span class="text-poppy-500 text-sm text-right"><%= msg %></span>
        <% end %>
      </div>
      <%= f.password_field :password_confirmation, 
        autocomplete: "new-password", 
        class: "border py-1 px-5 rounded-full text-sm w-full" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", 
        class: "cursor-pointer border border-poppy-500 hover:bg-poppy-500 hover:text-white uppercase py-1 px-5 rounded-full text-sm w-full" %>
    </div>
  <% end %>

  <div class="self-end flex gap-2 items-center">
    <span>Already have an account?</span>
    <%= render "devise/shared/links" %>
  </div>
</div>