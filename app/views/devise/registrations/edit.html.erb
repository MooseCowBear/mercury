<div class="flex flex-col gap-3 w-[clamp(300px,_80vw,_800px)] justify-self-center"> 
  <h2 class="text-2xl uppercase">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, 
    as: resource_name, 
    url: registration_path(resource_name), 
    html: { method: :put, class: "flex flex-col gap-3 p-5 bg-white rounded-xl shadow py-16 dark:bg-neutral-800/90" }) do |f| %>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
        <%= f.label :email, class: "uppercase text-sm" %>
        <% f.object.errors.full_messages_for(:email).each do |msg| %>
          <span class="text-raspberry-500 text-sm text-right"><%= msg %></span>
        <% end %>
      </div>
      <%= f.email_field :email, 
        autofocus: true, 
        autocomplete: "email", 
        class: "border py-1 px-5 rounded-full text-sm w-full dark:bg-neutral-800/90" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
      <%= f.label :username, class: "uppercase text-sm" %>
        <% f.object.errors.full_messages_for(:username).each do |msg| %>
          <span class="text-raspberry-500 text-sm text-right"><%= msg %></span>
        <% end %>
      </div>
      <%= f.text_field :username, 
        autofocus: true, 
        class: "border py-1 px-5 rounded-full text-sm w-full dark:bg-neutral-800/90" %>
    </div>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
        <div>
          <%= f.label :password, class: "uppercase text-sm" %> 
          <i class="text-sm">(leave blank if you don't want to change it)</i>
        </div>
        <% f.object.errors.full_messages_for(:password).each do |msg| %>
          <span class="text-raspberry-500 text-sm text-right"><%= msg %></span>
        <% end %>
      </div>
      <%= f.password_field :password, 
        autocomplete: "new-password", 
        class: "border py-1 px-5 rounded-full text-sm w-full dark:bg-neutral-800/90" %>
      <% if @minimum_password_length %>
        <br />
        <em class="text-sm"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
        <%= f.label :password_confirmation, class: "uppercase text-sm" %>
        <% f.object.errors.full_messages_for(:password_confirmation).each do |msg| %>
          <span class="text-raspberry-500 text-sm text-right"><%= msg %></span>
        <% end %>
      </div>
      <%= f.password_field :password_confirmation, 
        autocomplete: "new-password", 
        class: "border py-1 px-5 rounded-full text-sm w-full dark:bg-neutral-800/90" %>
    </div>

    <div class="field">
      <div class="flex gap-2 justify-between items-end">
        <div>
          <%= f.label :current_password, class: "uppercase text-sm" %> 
          <i class="text-sm">(we need your current password to confirm your changes)</i>
        </div>
        <% f.object.errors.full_messages_for(:current_password).each do |msg| %>
          <span class="text-raspberry-500"><%= msg %></span>
        <% end %>
      </div>
      <%= f.password_field :current_password, 
        autocomplete: "current-password", 
        class: "border py-1 px-5 rounded-full text-sm w-full dark:bg-neutral-800/90" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", 
        class: "cursor-pointer border border-raspberry-500 dark:border-raspberry-500/90 hover:bg-raspberry-500 dark:hover:bg-raspberry-500/90 hover:text-white uppercase py-1 px-5 rounded-full text-sm w-full" %>
    </div>
  <% end %>

  <div class="flex justify-between items-center">
    <span class="flex gap-2">
      Unhappy? 
      <%= button_to "Cancel my account", 
        registration_path(resource_name), 
        data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, 
        method: :delete %>
    </span>

    <%= link_to "Back", :back, class: "uppercase tracking-wider self-center border-b-2 border-raspberry-500" %>
  </div>
</div>